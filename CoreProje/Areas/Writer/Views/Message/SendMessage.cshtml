@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_WritersLayout.cshtml";
}

<h1>Yeni Mesaj Gönderme Sayfası</h1>
<form class="form-group" method="post">

    @Html.Label("Alıcı Mail")
    @Html.TextAreaFor(x=>x.Receiver, new {@class ="form-control"})
    <br /><br />
    @Html.Label("Konu")
    @Html.TextAreaFor(x=>x.Subject, new{@class="form-control"})
    <br /><br />
    @Html.Label("Mesaj")
    @Html.TextAreaFor(x=>x.MessageContent, new{@class="form-control"})
    <br />
    <button class="btn btn-primary">Gönder</button>
</form>

