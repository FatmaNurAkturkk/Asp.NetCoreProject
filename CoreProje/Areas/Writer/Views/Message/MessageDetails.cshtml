@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WritersLayout.cshtml";
}


<h1>Duyuru Detayları</h1>
<form class="form-group">

    @Html.HiddenFor(x=>x.Id, new {@class ="form-control"})
    <br /><br />
    @Html.Label("Gönderen Adı")
    @Html.TextAreaFor(x=>x.SenderName, new {@class ="form-control"})
    <br /><br />
    @Html.Label("Gönderen Mail")
    @Html.TextAreaFor(x=>x.Sender, new{@class="form-control"})
    <br /><br />
    @Html.Label("Mesaj")
    @Html.TextAreaFor(x=>x.MessageContent, new{@class="form-control"})
</form>




