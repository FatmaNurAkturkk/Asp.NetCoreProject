@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "ReceiverMessageDetails";
    Layout = "~/Views/Shared/_WritersLayout.cshtml";
}

<h1>Mesaj Detayları</h1>
<form class="form-group">

    @Html.HiddenFor(x=>x.Id, new {@class ="form-control"})
    <br /><br />
    @Html.Label("Alıcı Adı")
    @Html.TextAreaFor(x=>x.ReceiverName, new {@class ="form-control"})
    <br /><br />
    @Html.Label("Alıcı Mail")
    @Html.TextAreaFor(x=>x.Receiver, new{@class="form-control"})
    <br /><br />
    @Html.Label("Mesaj")
    @Html.TextAreaFor(x=>x.MessageContent, new{@class="form-control"})
</form>



