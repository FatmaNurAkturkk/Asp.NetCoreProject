@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
@using (Html.BeginForm("UpdateService", "Service", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Hizmet Düzenleme Paneli </p>
                <form class="forms-sample">
                    @Html.HiddenFor(x=>x.ServiceId)

                    @Html.Label("Hizmet Başlığı")
                    @Html.TextBoxFor(x=>x.Title, new{@class ="form-control"})
                    <br />
                    <label>Resim Yolu</label>
                    @Html.TextBoxFor(x=>x.ImageUrl, new{@class="form-control"})
                    <br />
                    <button class="btn btn-info">Güncelle</button>
                    <button class="btn btn-info">Deneyim Ekle</button>
                </form>
            </div>
        </div>
    </div>
}


